---
import { Image } from "astro:assets";

const { remote, alt, caption } = Astro.props;
---

<figure>
  <Image
    src={remote}
    format="avif"
    quality="mid"
    alt={alt}
    layout="full-width"
    class="full-width"
  />
  <figcaption class="med m-4 p-2 w-full">
    {caption}
  </figcaption>
</figure>

<style>
  figcaption {
    background-color: #ffbf00;
  }
</style>
